programa {
  funcao inicio() {
   //Calcula a área do losango

   real diagonal_maior
   real diagonal_menor

   escreva("\nInforme a diagonal maior do losango: ")
   leia(diagonal_maior)

   escreva("Informe a diagonal menor do losango: ")
   leia(diagonal_menor)
   
   escreva("O valor da ára do losango é: ", (diagonal_maior*diagonal_menor)/2)
    
  }
}
